{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Database": "Host=eventmanagement.database;Port=5432;Database=EventManagementDatabase;UserId=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "eventmanagement.redis:6379"
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [ "http://eventmanagement.identity:8080/realms/eventmanagement", "http://localhost:18080/realms/eventmanagement"  ]
    },
    "MetadataAddress": "http://eventmanagement.identity:8080/realms/eventmanagement/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "HealthUrl": "http://eventmanagement.identity:8080/health"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://eventmanagement.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "EventManagement.Events.Api"
    }

  }
}
